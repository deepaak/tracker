{
  "name": "timetracker-desktop",
  "version": "1.0.0",
  "description": "Desktop time tracking application similar to TimeDoctor",
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "electron": "electron .",
    "dev": "concurrently \"npm run webpack-dev\" \"wait-on http://localhost:3002 && ELECTRON_IS_DEV=true electron .\"",
    "webpack-dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build-electron": "npm run build && electron-builder",
    "dist": "npm run build && electron-builder --publish=never",
    "dist-mac": "npm run build && electron-builder --mac",
    "dist-win": "npm run build && electron-builder --win"
  },
  "keywords": [
    "electron",
    "time-tracker",
    "desktop",
    "react"
  ],
  "author": "Your Name",
  "license": "MIT",
  "build": {
    "appId": "com.yourcompany.timetracker",
    "productName": "Time Tracker",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "public/main.js",
      "public/assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "public/assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "public/assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "icon": "public/assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "@koa/multer": "^4.0.0",
    "axios": "^1.10.0",
    "electron-is-dev": "^3.0.1",
    "electron-store": "^8.1.0",
    "get-windows": "^9.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "robotjs": "^0.6.0",
    "screenshot-desktop": "^1.15.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "css-loader": "^7.1.2",
    "electron": "^31.7.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.3",
    "style-loader": "^4.0.0",
    "wait-on": "^8.0.3",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  }
}
